// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model users {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  firstname  String?
  lastname   String?
  roleId   String
  ia_usages ia_usage[]
  api_keys  api_keys[]
}

model role {
  id    String     @id @default(uuid())
  name  String @unique
}

model ia_usage {
  id        Int      @id @default(autoincrement())
  userId    Int
  prompt    String
  response  String
  createdAt DateTime @default(now())
  
  user users @relation(fields: [userId], references: [id])
}

model api_keys {
  id        Int      @id @default(autoincrement())
  userId    Int
  apiKey    String   @unique
  revoked   Boolean  @default(false)
  expiresAt DateTime?
  lastUsedAt DateTime?
  createdAt DateTime @default(now())

  user users @relation(fields: [userId], references: [id])
}

model api_logs {
  id        Int      @id @default(autoincrement())
  level     String
  operation String
  message   String
  httpMethod String?
  httpUrl    String?
  requestHeaders String
  requestBody    String?
  responseStatus  String?
  responseHeaders String?
  responseBody    String?
  responseTime  String?
  createdAt DateTime @default(now())
}